<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".Screens.ResultActivity">


    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        app:srcCompat="@drawable/ok_200px" />

    <TextView
        android:id="@+id/Tilte_Signin"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:layout_margin="10dp"
        android:paddingTop="15dp"
        android:gravity="center"
        android:text="Đơn hàng đang được chuẩn bị để giao tới"
        android:textSize="30dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnBackToOrder"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/border_button"
        android:text="Tiếp tục mua hàng"
        app:backgroundTint="@color/red_mix_pink" />
</LinearLayout>